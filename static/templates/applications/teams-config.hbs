<div class="flexrow">
    {{! The sidebar listing all teams }}
    <aside class="sidebar flexcol">
        <nav class="tabs">
            {{#each teams as |team id|}}
                <div class="item tab tab team flexrow" data-tab="{{id}}">
                    <a>{{team.name}}</a>
                    <div class="controls">
                        <a data-action="remove" data-id="{{id}}" data-tooltip="OH.Settings.TeamsConfig.Remove"><i class="fa fa-trash"></i></a>
                    </div>
                </div>
            {{/each}}
        </nav>
        <footer class="controls">
            <button type="button" data-action="add"><i class="fas fa-plus"></i> {{localize "OH.Settings.TeamsConfig.Add"}}</button>
        </footer>
    </aside>

    <form class="content flexcol" autocomplete="off">
        {{#each teams as |team id|}}
            {{! Form section for an individual team, also serving as a tab's content }}
            <section class="team tab" data-tab="{{id}}">
                <header>
                    <h2>{{team.name}}</h2>
                </header>

                <div class="form-group">
                    <label>{{localize "OH.Settings.TeamsConfig.TeamName"}}</label>
                    <div class="form-fields">
                        <input type="text" name="{{id}}.name" value="{{name}}">
                    </div>
                </div>

                <div class="form-group">
                    <label>{{localize "OH.Settings.TeamsConfig.Color"}}</label>
                    <div class="form-fields">
                        {{colorPicker name=(concat id ".color") value=team.color}}
                    </div>
                </div>
            </section>
        {{/each}}
        <footer class="controls">
            <button type="button" data-action="save"><i class="fas fa-save"></i> {{localize "SETTINGS.Save"}}</button>
        </footer>
    </form>
</div>
