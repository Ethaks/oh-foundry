<div class="section">
    <div>
        <p class="floatLeft"><b><u>Weapons</u></b></p>
        <p class="floatRight">
            <a class="item-create" data-type="weapon" title="New"><i class="fas fa-plus"></i></a> <a class="item-import" title="Add from compendium"><i class="fas fa-folder-plus"></i></a>
        </p>
    </div>
    {{#if weapons}}
    <table class="item-list">
        <tr>
            <th>Weapon</th>
            <th>ATF</th>
            <th>Atk B.</th>
            <th>Damage</th>
            <th>Ammo</th>
        </tr>
    {{#each weapons as |item id|}}
        <tr class="item center" data-item-id="{{item._id}}">
            <td class="left"><div class="flexCenter"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/><div style="margin-left: 5px"><a class="useWeapon">{{item.name}}</a></div></div></td>
            <td>{{#if item.system.actionsToUse}}{{item.system.actionsToUse}}{{/if}}</td>
            <td>{{#if (eq item.system.weaponType "ranged")}}{{sum ../system.aim item.system.attackBonus}}{{/if}}
                {{#if (eq item.system.weaponType "melee")}}{{sum ../system.melee item.system.attackBonus}}{{/if}}
            </td>
            <td>{{#if item.system.damagePerAttack}}{{item.system.numberOfAttacks}} x {{item.system.damagePerAttack}} {{item.system.damageType}}{{/if}}</td>
            <td><input class="smallInput inline-edit" data-field="system.capacity.value" type="text" value="{{item.system.capacity.value}}" data-dtype="Number" />{{#if item.system.capacity.max}} / {{item.system.capacity.max}}{{/if}}</td>
            <td class="floatRight">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    {{/each}}
    </table>
    {{/if}}
</div>