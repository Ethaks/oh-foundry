<div class="chatMessage">
    <div class="fitToContent">
        <div class="floatLeft"><img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="32" width="32"/></div>&nbsp&nbsp<h2 class="floatRight">{{item.name}}</h2> </div>
    <div>{{{description}}}</div>
    <hr />
    <table class="center">
        <tr>
    {{#if item.system.actionsToUse}}
        <td>{{item.system.actionsToUse}} action(s)</td>
    {{/if}}
    {{#if item.system.powerCost}}
        <td>{{item.system.powerCost}} power</td>
    {{/if}}
    {{#if item.system.capacity.value}}
        <td>{{item.system.capacity.value}} uses left</td>
    {{/if}}
        </tr>
    </table>
</div>
